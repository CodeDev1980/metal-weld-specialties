<!DOCTYPE html>
<html lang="en">
<%- include('partials/header') -%>

<body>
<!-- Start your project here-->
<!--Section: Design Block-->
<header>
    <!-- Navbar -->
    <%- include('partials/navBar') -%>
    <!-- Navbar -->

</header>

<!--Section: Design Block-->
<!-- Container for demo purpose -->
<div class="container-fluid my-5 py-5">
    <!-- Container for demo purpose only -->
    <div class="container text-center pt-5">
        <section>
            <div class="lightbox">
                <div class="row justify-content-center align-items-center d-flex mx-auto py-2 me-1 text-center">
                    <% for(i=0; i < arizona.length; i++){ %>
                    <div class="card" style="max-width: 21rem;">
                        <h4><%= arizona[i].title %></h4>

                        <!--                        <a href="projectA.html" class="btn mb-2 btn-outline-black">View Project Details</a>-->
                        <img src="<%= arizona[i].image %>"
                             data-mdb-img="<%= arizona[i].title %>" alt="<%= arizona[i].title %>"
                             class="w-100 mb-4 rounded-5 shadow-3-soft" />
                        <p class="text-dark">
                            Posted On <%= arizona[i].datePosted.toLocaleString() %>
                        </p>
                        <div class="text-center">
                            <a href="/singleArizona/<%= arizona[i]._id %>" class="btn btn-primary m-2">Details</a>
                            <% if(loggedIn){ %>
                                <a href="/delete/arizona/<%= arizona[i]._id%>" class="btn btn-warning m-2">Delete</a>
                            <% } %>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </section>
    </div>
    <!-- Container for demo purpose only -->
</div>
<!-- Container for demo purpose -->

<!-- Footer -->
<%- include('partials/footer') -%>
<!-- Footer -->

<!-- End your project here-->
</body>

<%- include('partials/scripts') -%>
</html>
